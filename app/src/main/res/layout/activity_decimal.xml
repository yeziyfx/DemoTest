<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <include
        style="@style/layout_title_bar_style"
        layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:background="@color/color_white"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="1234567890."
            android:hint="请输入测试数据(例如:0.02)"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_digit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:digits="123456789"
            android:hint="保留小数位数(默认原值)"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         android:background="@color/color_white"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_get_double"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="获取double值" />

        <Button
            android:id="@+id/btn_get_double_digit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="double保留小数" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" 
         android:background="@color/color_white"
        android:gravity="center">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除" />
    </LinearLayout>

</LinearLayout>