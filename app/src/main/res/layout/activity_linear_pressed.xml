<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/common_title_bar"/>
	<LinearLayout 
	    android:id="@+id/lin_linear_pressed"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/bg_color_btn_white_selector"
	    android:layout_margin="8dp"
	    android:gravity="center"
	    android:orientation="vertical">
	    <Button 
	        android:id="@+id/btn_linear_pressed"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="15dp"
	        android:background="@drawable/bg_btn_theme_selector"
	        android:text="点我"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:padding="10dp"
	        android:text="实例文字"
	        android:textColor="@color/text_color_theme_selector"/>
	</LinearLayout>
</LinearLayout>
