<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg"
    android:orientation="vertical" >

    <include
        style="@style/layout_title_bar_style"
        layout="@layout/common_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_refresh_rotate_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_loading"
            android:padding="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/iv_refresh_rotate_animation"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_start_refresh"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_btn_theme_selector"
                android:padding="10dp"
                android:text="开始刷新" />

            <Button
                android:id="@+id/btn_stop_refresh"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                 android:layout_margin="5dp"
                android:background="@drawable/bg_btn_theme_selector"
                android:padding="10dp"
                android:text="停止刷新" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>