<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/color_theme" >

    <ImageView
        android:id="@+id/iv_back_title_bar_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_back_selector" />

    <TextView
        android:id="@+id/tv_title_title_bar_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="@color/color_white" />

    <ImageView
        android:id="@+id/iv_more_title_bar_common"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_more_selector"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_right_common_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="13dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="rightText"
        android:textColor="@color/text_color_gray_a0_selector"
        android:textSize="15sp" 
        android:visibility="gone"/>

</RelativeLayout>