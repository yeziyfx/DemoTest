<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        layout="@layout/common_title_bar"/>"
	<Button 
	    android:id="@+id/btn_play_by_system"
	    style="@style/common_btn"
	    android:layout_margin="5dp"
	    android:text="调用系统播放器播放"/>
	<VideoView 
	    android:id="@+id/videoview_video_player"
	    android:layout_width="match_parent"
	    android:layout_height="300dp"
	    android:visibility="gone"/>
	<Button 
	    android:id="@+id/btn_play_by_android"
	    style="@style/common_btn"
	    android:layout_margin="5dp"
	    android:text="调用Android组件播放"/>
	<Button 
	    android:id="@+id/btn_play_by_mediaplayer"
	    style="@style/common_btn"
	    android:layout_margin="5dp"
	    android:text="调用MediaPlayer播放"/>
</LinearLayout>
