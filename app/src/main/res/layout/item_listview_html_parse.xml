<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white">

    <RelativeLayout style="@style/common_rela" >

        <TextView
            android:id="@+id/tv_title_item_html_parse"
            style="@style/common_tv_gray_a0_14"
            android:layout_centerVertical="true"
            android:text="title" />

        <TextView
            android:id="@+id/tv_content_item_html_parse"
            style="@style/common_tv_gray_a0_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_title_item_html_parse"
            android:text="content" />
    </RelativeLayout>
</LinearLayout>