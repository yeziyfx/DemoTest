<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white">

    <RelativeLayout style="@style/common_rela" >

        <TextView
            android:id="@+id/tv_id_item_group_expandable_listview"
            style="@style/common_tv_gray_32_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text="id" />

        <TextView
            android:id="@+id/tv_img_name_item_group_expandable_listview"
            style="@style/common_tv_gray_32_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_id_item_group_expandable_listview"
            android:singleLine="true"
            android:text="imgName" />
    </RelativeLayout>
</LinearLayout>